{{#if success }}
    <div class="container msg">
        <div class="row">
            <div class="col-md-4 mx-auto">
                <div class="alert alert-success alert-dissmissable fade show" role="alert">
                    {{success}}
                    <button type="button" class="close" data-dismiss="alert" alia-label="Close">
                        <span aria-hiden="true">
                            &times;
                        </span>
                    </button>
                </div>
            </div>
        </div>
    </div>
{{/if}}

{{#if message }}
    <div class="container msg">
        <div class="row">
            <div class="col-md-4 mx-auto">
                <div class="alert alert-danger alert-dissmissable fade show" role="alert">
                    {{message}}
                    <button type="button" class="close" data-dismiss="alert" alia-label="Close">
                        <span aria-hiden="true">
                            &times;
                        </span>
                    </button>
                </div>
            </div>
        </div>
    </div>
{{/if}}